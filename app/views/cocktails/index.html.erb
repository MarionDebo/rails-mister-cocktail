<div class="banner" style="background-image: linear-gradient(-260deg, rgba(0,50,70,0.3) 0%, rgba(0,10,30,0.3) 50%), url('<%= image_path 'materiel-cocktail.jpg' %>');">
  <div class="banner-content">
    <h1 id="h1" >Rhum cocktails</h1>

    <p>The best cocktails in town</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn-primary" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "Ready to drink?", cocktail_path(cocktail), class: 'card-link' %>

        </div>
      </div>
    <% end %>
  </div>
</div>

